<div class="container">
    <p id="notice"><%= notice %></p>

    <h1>Listing Keywords</h1>

    <table class="table table-hover table-sm">
        <thead>
            <tr>
                <th>id</th>
                <th>movie_id</th>
                <th>keyword_phrase</th>
                <th>is_hash_tag</th>
                <th colspan="1"></th>
            </tr>
        </thead>

        <tbody>
            <% @keywords.each do |keyword| %>
            <tr><td>
                    <a href="/keywords/<%= keyword.id %>"><%= keyword.id %></a>
                    </td>
                <td>
                    <a href="/movies/<%= keyword.movie_id %>"><%= keyword.movie_id %></a>
                </td>
                <td><%= keyword.keyword_phrase %></td>
                <td><%= keyword.is_hash_tag %></td>
                <td><%= link_to 'Show', keyword %></td>
            </tr>
            <% end %>
        </tbody>
    </table>
    <br>
</div>
