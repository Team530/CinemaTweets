<div class="container">
<a href="/"><h4>Back To Main</h4></a>
<p id="notice"><%= notice %></p>

<h1>Listing Keywords</h1>

<table>
  <thead>
    <tr>
        <th>id</th>
        <th>movie_id</th>
        <th>keyword_phrase</th>
        <th>is_hash_tag</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @keywords.each do |keyword| %>
      <tr>
         <td><%= keyword.id %></td>
         <td><%= keyword.movie_id %></td>
         <td><%= keyword.keyword_phrase %></td>
         <td><%= keyword.is_hash_tag %></td>
        <td><%= link_to 'Show', keyword %></td>
        <td><%= link_to 'Edit', edit_keyword_path(keyword) %></td>
        <td><%= link_to 'Destroy', keyword, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<!-- <%= link_to 'New Keyword', new_keyword_path %> -->
</div>
