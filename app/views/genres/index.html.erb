<p id="notice"><%= notice %></p>

<h1>Listing Genres</h1>

<table class="table table-hover table-sm">
    <thead>
        <tr>
            <th>Genre</th>
            <th>Total Films</th>
            <th colspan="1"></th>
        </tr>
    </thead>

    <tbody>
      <% @genres.each do |genre| %>
            <tr>
              <td><%= genre.genre_name %></td>
              <td><%= genre.count%></td>
              <td><%= link_to 'More Info', genre %></td>
            </tr>
      <% end %>
    </tbody>
</table>
